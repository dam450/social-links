---
interface Props {
  url: string;
  title: string;
  icon?:
    | "linkedin"
    | "youtube"
    | "twitter"
    | "twitch"
    | "github"
    | "discord"
    | "instagram";
}

const { url, title, icon } = Astro.props;
---

<li>
  <a href={url} target="_blank" rel="noopener noreferrer">
    {icon && <i class={`ph-${icon}-logo`} />}
    {title}
  </a>
</li>

<style is:global>
  a {
    text-decoration: none;
  }

  ul li + li {
    margin-top: 1.6rem;
  }

  ul li a {
    height: 5.3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--primary-color);
    color: white;
    text-transform: uppercase;
    font-size: 1.4rem;

    border-radius: 0.6rem;

    transition: all 400ms ease-out;
  }

  ul li a:hover {
    background: var(--primary-color-dark);
    transform: scale(1.05);
  }

  ul li a i {
    padding-right: 5px;
    font-size: 2.5rem;
  }
</style>
