---
import "@styles/global.css";
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="favicon.svg" type="image/svg+xml" />
    <title>Social Links</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Roboto:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <script src="https://unpkg.com/phosphor-icons" defer></script>
    <script src="./js/particles.js" defer></script>
    <script src="./js/app.js" defer></script>
  </head>

  <body class="light-blue">
    <div id="particles-js"></div>
    <main class="container">
      <slot />
    </main>
  </body>
</html>

<style>
  body.light-blue {
    --bg-color: #dfe1e6;
    --text-color: #00082e;

    --hue: 245;
    --primary-color: hsla(var(--hue), 81%, 59%, 0.6);
    --primary-color-dark: hsl(var(--hue), 81%, 59%);
  }

  body.dark-blue {
    --bg-color: hsl(266, 100%, 9%);
    --text-color: hsl(223, 100%, 96%);

    --primary-color: hsla(228, 81%, 59%, 0.6);
    --primary-color-dark: hsl(230, 57%, 50%);

    --particles-lines: #c73642;
  }

  body.pink {
    --bg-color: #fff0f6;
    --text-color: #1f000b;
    --primary-color: #d6336c;
    --primary-color-dark: #a61e4d;
  }

  body.dark-pink {
    --bg-color: #1f000b;
    --text-color: #fff0f6;
    --primary-color: #d6336c;
    --primary-color-dark: #a61e4d;
  }

  body {
    background: var(--bg-color);
    color: var(--text-color);
    font-family: "Roboto", sans-serif;

    height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    margin: auto;
    position: absolute;
    top: 50%;
    right: 50%;
    transform: translate(50%, -55%);
  }

  .container {
    text-align: center;
    width: min(95%, 30rem);
    padding: 2rem 1rem;
  }
</style>
