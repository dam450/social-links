---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import SocialButton from "../components/Social-button.astro";
import Avatar from "../components/Avatar.astro";
import Footer from "../components/Footer.astro";

const username = "dam450";
---

<BaseLayout>
  <Avatar username={username} />

  <ul>
    <SocialButton
      url="https://www.linkedin.com/in/evandro-damaso/"
      title="Linkedin"
      icon="linkedin"
    />

    <SocialButton
      url="https://www.github.com/dam450"
      title="GitHub"
      icon="github"
    />

    <SocialButton
      url="https://www.instagram.com/dam450.dev"
      title="Instagram"
      icon="instagram"
    />

    <SocialButton
      url="https://discord.com/users/547738105331843077"
      title="Discord"
      icon="discord"
    />
  </ul>

  <Footer username={username} />
</BaseLayout>
