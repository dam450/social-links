---
import BaseLayout from "@layouts/BaseLayout.astro";
import Avatar from "@components/Avatar.astro";
import Footer from "@components/Footer.astro";
import { Social } from "@components/Social/";

const username = "dam450";
---

<BaseLayout>
  <Avatar username={username} />

  <Social.List>
    <Social.Item
      url="https://www.linkedin.com/in/evandro-damaso/"
      title="Linkedin"
      icon="LinkedIn"
    />

    <Social.Item
      url="https://www.github.com/dam450"
      title="GitHub"
      icon="Github"
    />

    <Social.Item
      url="https://www.instagram.com/dam450.dev"
      title="Instagram"
      icon="Instagram"
    />

    <Social.Item
      url="https://discord.com/users/547738105331843077"
      title="Discord"
      icon="Discord"
    />
  </Social.List>

  <Footer username={username} />
</BaseLayout>
